<head>
     <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <title>Customer Login</title>
    <link rel="stylesheet" href="/public/css/dog-owner-login.css">
</head>
<body>
    <h1>Customer Login</h1><br>
    <div class="container">
        <form id="login" method="post" action="/customerSignin">
         <div class="tab">
          <p
            style="text-align: center; font-weight: normal; font-size: xX-large">
            Bow-Wow 🐶 Owner Login
          </p>
          <div class="normalOrientation">
            <label for="email">📧 Email:</label>
            <input
              class="textbox"
              type="email"
              required
              id="email"
              name="email"
              value="{{email}}"
              placeholder="E-mail"
            />
          </div>
          <br />
          <div class="normalOrientation">
            <label for="pass">🔒 Password</label>
            <input
              class="textbox"
              type="password"
              id="pass"
              required
              name="password"
              value="{{password}}"
              placeholder="Password"
            />
          </div>
          <br /><br />
          <input
            type="submit"
            value="Login"
            name="log"
            id="log"
            style="width: 30%; align-self: center"
          />
          <br />
          <a href="customerSignup" style="align-self: flex-end"
            >Need to register? Click here to sign-up</a
          ><br />
        </div>
        </form>
        <br><br>
        {{#if hasErrors}}
        <ul>
    
            {{#each error}}
         <li class="errors">{{this}}.</li>
            {{/each}}
           
        </ul>
        {{/if}}
                {{#if hasserverErrors}}
        <ul>
         <li class="errors">{{error}}.</li>
        </ul>
    {{/if}}
    </div>

</body>